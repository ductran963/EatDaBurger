<div class = "row">
  <div class = "col-md-12">
    <img class = "mx-auto d-block" src = "./assets/img/burger.png">
  </div>
</div>
<div class="row mx-auto">
  <div class="col-md-12">
    <h1>Eat-Da-Burger!</h1>
  </div>
</div>

<div class="row">
  <div class="col-md-4">
    <h2>Burgers not eaten!</h2>
    <ul>
      {{#each burgers}}
      {{#unless devoured}}
      {{> burgers/eat-block devoured=true}}
      {{/unless}}
      {{/each}}
    </ul>
  </div>
  <div class="col-md-4">
    <h2>Add a Burger!</h2>
    <form class="create-form">

      <div class="form-group">
        <label for="burg">Enter name of any burgers you would like to add and click "Submit" button below:</label>
        <input type="text" id="burg" name="burgerName">
      </div>

      {{!-- <div class="form-group">
    <label for="sleepy">Devoured?</label><br>
    <input type="radio" name="sleepy" value="1" checked> Sleepy!<br>
    <input type="radio" name="sleepy" value="0"> Awake
  </div> --}}

      <button type="submit">Submit</button>
    </form>
  </div>
  <div class="col-md-4">
    <h2>Eaten Burgers!</h2>

    <ul class = "eaten">
      {{#each burgers}}
      {{#if devoured}}
      {{> burgers/eat-block devoured=false}}
      {{/if}}
      {{/each}}
    </ul>
  </div>
</div>